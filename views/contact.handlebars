<h2>Contact me</h2>
<form action="/contact/send-message" method="POST">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label for="file">
    Project design <input type="file" name="picture" accept=".png, .jpg, .jpeg, .gif">
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  
  <button type="submit">Send message</button>
</form>

{{#if isError}}
<div class="isError">
  <h2>You can't leave fields empty!</h2>
</div>
{{/if}}

{{#if isSent}}
<div class="isSent">
  <h2>The message has been send!! File {{ pictureName }} has been saved</h2>
</div>
{{/if}}